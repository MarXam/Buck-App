<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="90dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/usuario"
        style="@style/EditTextbienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario"
        android:textColor="@color/azul"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/seguidos"
        style="@style/boton_gradiente"
        android:layout_width="207dp"
        android:layout_height="43dp"
        android:text="Seguidos"
        android:textColor="@color/perla"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/cerrarseccion"
        style="@style/boton_cerrar"
        android:layout_width="217dp"
        android:layout_height="43dp"
        android:text="Cerrar sesion"
        android:textColor="@color/perla"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="521dp" />

    <Button
        android:id="@+id/ajustes"
        style="@style/boton_gradiente"
        android:layout_width="191dp"
        android:layout_height="42dp"
        android:text="Ajustes"
        android:textColor="@color/titulo_buck"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="375dp" />

    <Button
        android:id="@+id/historial"
        style="@style/boton_gradiente"
        android:layout_width="198dp"
        android:layout_height="42dp"
        android:text="Historial"
        android:textColor="@color/titulo_buck"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Bienvenido"
        android:textColor="@color/perla"
        android:textSize="20dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnBarraMenu"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="@color/texto_principal"
        app:menu="@menu/barra_busqueda"
        tools:ignore="VisualLintBottomNav"
        tools:layout_editor_absoluteY="651dp" />

</androidx.constraintlayout.widget.ConstraintLayout>