<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:id="@+id/linearLayoutTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        >

        <ImageView
            android:id="@+id/ivLogoBuck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/ivLogoBuck"
            android:src="@drawable/logo_buck"
            />

        <TextView
            android:id="@+id/tvTituloBuck"
            style="@style/TextViewBuckTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:text="@string/app_name_mayus"
            />

    </LinearLayout>

    <View
        android:id="@+id/vSeparadorTitutloSubtitulo"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bottom_basico"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutPerfil"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTitulo" />

    <LinearLayout
        android:id="@+id/linearLayoutPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTitulo"
        app:layout_constraintBottom_toTopOf="@id/vSeparadorTitutloSubtitulo2">

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ruroni_kenshin"
            android:layout_marginEnd="15dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/texto_titulo"
                android:text="@string/tvPerfil"
                />
            <TextView
                android:id="@+id/tvNombrePerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MarXam"
                android:textColor="@color/perla"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/vSeparadorTitutloSubtitulo2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bottom_basico"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutPerfil"
        />


    <LinearLayout
        android:id="@+id/linearLayoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toTopOf="@+id/bnBarraMenu"
        app:layout_constraintTop_toBottomOf="@+id/vSeparadorTitutloSubtitulo2"
        >

        <Button
            android:id="@+id/seguidos"
            style="@style/ButtomBotonBasicoInvertido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguidos"
            android:textColor="@color/titulo_buck"
            />

        <Button
            android:id="@+id/historial"
            style="@style/ButtomBotonBasicoInvertido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguidos"
            android:textColor="@color/titulo_buck"/>

        <Button
            android:id="@+id/ajustes"
            style="@style/ButtomBotonBasicoInvertido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguidos"
            android:textColor="@color/titulo_buck"/>

        <Button
            android:id="@+id/cerrarseccion"
            style="@style/boton_cerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguidos"
            android:textColor="@color/titulo_buck"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnBarraMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/barra_busqueda"
        android:background="@color/fonfoBarraNavegacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvVistaManga"
        tools:ignore="VisualLintBottomNav" />

</androidx.constraintlayout.widget.ConstraintLayout>